@model MongoDBProject.Dtos.CategoryDtos.CreateCategoryDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kategori Oluşturma</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container">
    <br/><br/>
    <form method="post">
        <div class="alert alert-info">Yeni Kategori Ekleme Sayfası</div>
        <label for="categoryName">Kategori Adı</label>
        <input type="text" asp-for="CategoryName" class="form-control" placeholder="Kategori Adı" required>
        <button class="btn btn-primary"> Kategori Oluştur </button>
    </form>
</div>
</body>
</html>
