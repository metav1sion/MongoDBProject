@model MongoDBProject.Dtos.ProductDtos.CreateProductDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürün Oluşturma</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <br /><br />
        <form method="post">
            <div class="alert alert-info">Yeni Ürün Ekleme Sayfası</div>
            <label for="productName">Ürün Adı</label>
            <input type="text" asp-for="ProductName" class="form-control" placeholder="Kategori Adı" required>
            <br />
            <label for="productPrice">Ürün Fiyatı</label>
            <input type="number" asp-for="Price" class="form-control" placeholder="Ürün Fiyatı" required>
            <br />
            <label for="productStock">Ürün Stok</label>
            <input type="number" asp-for="Stock" class="form-control" placeholder="Ürün Stok" required>
            <br />
            <button class="btn btn-primary"> Ürün Oluştur </button>
        </form>
    </div>
</body>
</html>
