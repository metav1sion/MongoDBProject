@model List<MongoDBProject.Dtos.ProductDtos.ResultProductDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürün Listesi</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <br /><br />
        <table class="table table-hover">
            <tr>
                <th>Ürün Id</th>
                <th>Ürün Adı</th>
                <th>Ürün Stok</th>
                <th>Ürün Fiyatı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-primary">Güncelle</a></td>
                </tr>
            }
        </table>
        <a href="/Product/CreateProduct" class="btn btn-success"> Yeni Ürün Girişi</a>
    </div>
</body>
</html>
