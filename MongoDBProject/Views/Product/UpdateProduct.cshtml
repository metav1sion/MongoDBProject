@model MongoDBProject.Dtos.ProductDtos.GetByIdProductDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürün Güncelleme</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container">
    <br /><br />
    <form method="post">
        <div class="alert alert-info">Ürün Güncelleme Sayfası</div>
        <input type="text" asp-for="ProductId" class="form-control" readonly="readonly" required>
        <label for="categoryName">Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün Adı" required>
        <br />
        <label for="productPrice">Ürün Fiyatı</label>
        <input type="number" asp-for="Price" class="form-control" placeholder="Ürün Fiyatı" required>
        <br />
        <label for="productStock">Ürün Stok</label>
        <input type="number" asp-for="Stock" class="form-control" placeholder="Ürün Stok" required>
        <br />
        <button class="btn btn-primary"> Kategori Güncelle </button>
    </form>
</div>
</body>
</html>